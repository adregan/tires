{
  "name": "tires",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf out && rm -f .tsbuildinfo",
    "prod:build": "tsc",
    "prod:html": "node scripts/copy.mjs src/pages out",
    "prebuild": "npm run clean",
    "build": "npm-run-all prod:*",
    "fmt": "prettier --write src scripts",
    "dev:build": "tsc --watch",
    "dev:server": "http-server --port 8000 -c-1 out",
    "dev:html": "node scripts/copy.mjs src/pages out -w",
    "start": "npm-run-all --parallel dev:*"
  },
  "author": "Duncan Regan",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "http-server": "^14.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.7"
  },
  "dependencies": {
    "typescript": "^5.0.3"
  },
  "prettier": {
    "arrowParens": "avoid",
    "trailingComma": "all",
    "semi": false,
    "singleQuote": true
  }
}
