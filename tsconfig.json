{
  "compilerOptions": {
    /* Projects */
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",

    /* Language and Environment */
    "target": "es2022",
    "experimentalDecorators": true,

    /* Modules */
    "module": "es2022",
    "moduleResolution": "nodenext",
    "rootDir": "./src",

    /* Emit */
    "sourceMap": true,
    "outDir": "./out",
    "removeComments": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  }
}
